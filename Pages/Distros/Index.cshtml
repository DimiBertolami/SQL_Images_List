@page
@model DimsASP.NET_Core_Distroboot.Pages.Distros.IndexModel

@{
    ViewData["Title"] = "Distros";
}

<h1>distros and linux spinoffs</h1>

<p>
    <button class="btn btn-outline-primary type="button"><a asp-page="Create">Add Distro to database</a></button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Distro[0].ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Distro[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Distro[0].Url)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Distro) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Url)
                </td>
            <td>
                    <button class="btn btn-outline-success" type="button">
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a></button>
                    <button class="btn btn-outline-secondary" type="button">
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a></button>
                    <button class="btn btn-outline-info" type="button">
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a></button>
            </td>
        </tr>
}
    </tbody>
</table>
